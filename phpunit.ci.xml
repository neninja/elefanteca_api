<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         testdox="true"
         colors="true"
    >
    <testsuites>
        <testsuite name="e2e">
            <directory suffix="Test.php">./tests/e2e</directory>
        </testsuite>
        <testsuite name="integration">
            <directory suffix="Test.php">./tests/integration</directory>
        </testsuite>
        <testsuite name="unit">
            <directory suffix="Test.php">./tests/unit</directory>
        </testsuite>
    </testsuites>

    <logging>
        <testdoxText outputFile="docs/README.txt"/>
        <testdoxHtml outputFile="docs/index.html"/>
        <junit outputFile="docs/phpunit-log.xml"/>
        <teamcity outputFile="docs/phpunit-teamcity.txt"/>
    </logging>

    <coverage cacheDirectory="tests/_reports/cache_coverage"
          includeUncoveredFiles="true"
          processUncoveredFiles="true"
          pathCoverage="false"
          ignoreDeprecatedCodeUnits="true"
          disableCodeCoverageIgnore="true">
        <report>
            <html outputDirectory="tests/_reports" lowUpperBound="50" highLowerBound="90"/>
            <text outputFile="docs/coverage.txt"/>
        </report>

        <include>
            <directory suffix=".php">routes</directory>
            <directory suffix=".php">app/Http</directory>
            <directory suffix=".php">app/Core</directory>
        </include>
    </coverage>


    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_KEY" value="nU9ClNv41WWjjrFPFSkCvujzteHWJ9SN"/>
        <env name="DB_CONNECTION_DOCTRINE" value="pdo_sqlite"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
    </php>
</phpunit>
