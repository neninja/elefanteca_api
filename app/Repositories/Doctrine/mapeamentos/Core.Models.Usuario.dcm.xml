<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Core\Models\Usuario" table="usuarios">
        <id name="id" column="id" type="integer">
            <generator strategy="IDENTITY" />
        </id>

        <field name="nome"
            column="nome"
            type="string"
            length="45" />

        <field name="ativo"
            column="ativo"
            type="boolean" />

        <field name="cpf"
            column="cpf"
            type="string"
            length="11" />

        <field name="senha"
            column="senha"
            type="string"
            length="255" />

        <field name="email"
            column="email"
            type="email" />

        <field name="papel"
            column="papel"
            type="string"
            length="15" />
    </entity>
</doctrine-mapping>
